generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  INTERNSHIP
  FREELANCE
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String?  @unique @db.VarChar(191) // Made optional temporarily to avoid breaking existing admin if email missing
  passwordHash String
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Profile {
  id           String   @id @default(uuid())
  fullName     String   @db.VarChar(120)
  title        String   @db.VarChar(120)
  bio          String?  @db.Text
  location     String?  @db.VarChar(120)
  phone        String?  @db.VarChar(50)
  profileImage String?  @db.VarChar(191)
  cvUrl        String?  @db.VarChar(191)
  githubUrl    String?  @db.VarChar(191)
  linkedinUrl  String?  @db.VarChar(191)
  twitterUrl   String?  @db.VarChar(191)
  websiteUrl   String?  @db.VarChar(191)
  createdAt    DateTime @default(now())
}

model Experience {
  id             String         @id @default(uuid())
  companyName    String         @db.VarChar(191)
  position       String         @db.VarChar(120)
  employmentType EmploymentType
  location       String?        @db.VarChar(120)
  startDate      DateTime       @db.Date
  endDate        DateTime?      @db.Date
  isCurrent      Boolean        @default(false)
  description    String?        @db.Text
  createdAt      DateTime       @default(now())
}

model Education {
  id           String    @id @default(uuid())
  schoolName   String    @db.VarChar(191)
  degree       String    @db.VarChar(120)
  fieldOfStudy String?   @db.VarChar(120)
  startDate    DateTime? @db.Date
  endDate      DateTime? @db.Date
  grade        String?   @db.VarChar(20)
  isCurrent    Boolean   @default(false)
  description  String?   @db.Text
  createdAt    DateTime  @default(now())
}

model SkillCategory {
  id     String  @id @default(uuid())
  name   String  @unique @db.VarChar(50)
  order  Int     @default(0)
  skills Skill[]
}

model Skill {
  id         String         @id @default(uuid())
  name       String         @unique @db.VarChar(120)
  categoryId String
  category   SkillCategory  @relation(fields: [categoryId], references: [id])
  level      SkillLevel?    @default(INTERMEDIATE)
  projects   ProjectSkill[]
}

model Project {
  id               String         @id @default(uuid())
  title            String         @db.VarChar(120)
  slug             String         @unique @db.VarChar(191)
  shortDescription String         @db.VarChar(255)
  description      String?        @db.Text
  image            String?        @db.VarChar(191)
  tags             String?        @db.VarChar(255)
  demoUrl          String?        @db.VarChar(191)
  repoUrl          String?        @db.VarChar(191)
  isFeatured       Boolean        @default(false)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  skills           ProjectSkill[]
}

model ProjectSkill {
  projectId String
  skillId   String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  skill     Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([projectId, skillId])
}

model Certification {
  id             String    @id @default(uuid())
  name           String    @db.VarChar(191)
  organization   String?   @db.VarChar(191)
  issueDate      DateTime? @db.Date
  expirationDate DateTime? @db.Date
  credentialUrl  String?   @db.VarChar(191)
  createdAt      DateTime  @default(now())
}

model BlogPost {
  id          String    @id @default(uuid())
  title       String    @db.VarChar(191)
  slug        String    @unique @db.VarChar(191)
  excerpt     String?   @db.VarChar(255)
  content     String?   @db.LongText
  coverImage  String?   @db.VarChar(191)
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(120)
  email     String   @db.VarChar(191)
  subject   String?  @db.VarChar(191)
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}
